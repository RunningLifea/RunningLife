<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="370dp"
    android:layout_height="wrap_content">

    <!-- 타이틀바 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#0488FE"
            android:gravity="center"
            android:text="Add Schedule"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- //end 타이틀바 -->

    <!-- Notice -->
    <LinearLayout
        android:padding="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:text=":"
                />

            <EditText
                android:id="@+id/edit_title"
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Please input title"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Site"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:text=":"
                />

            <EditText
                android:id="@+id/edit_location"
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Please input location"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:text=":"
                />

            <Spinner
                android:id="@+id/add_start_hour"
                android:background="@drawable/spinner_time"
                android:layout_width="80dp"
                android:layout_height="40dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:text=":"
                />

            <Spinner
                android:id="@+id/add_start_min"
                android:background="@drawable/spinner_time"
                android:layout_width="80dp"
                android:layout_height="40dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="End"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:text=":"
                />

            <Spinner
                android:id="@+id/add_end_hour"
                android:background="@drawable/spinner_time"
                android:layout_width="80dp"
                android:layout_height="40dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:text=":"
                />


            <Spinner
                android:id="@+id/add_end_min"
                android:background="@drawable/spinner_time"
                android:layout_width="80dp"
                android:layout_height="40dp"/>
        </LinearLayout>

    </LinearLayout>
    <!-- Notice -->

    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!-- 닫기 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_daily_dialog"
            android:text="Confirm"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0488FE"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="53dp" />
    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>
